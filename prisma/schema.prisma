generator client {
    provider = "prisma-client"
    output   = "../lib/generated/prisma"
}

generator custom_generator {
    provider = "prisma-generator-fake-data"
    output   = "../lib/generated/fake-data.ts"
}

datasource db {
    provider = "postgresql"
}

model FormResponse {
    formId      String     @id @unique
    mdxSource   MdxContent @relation(fields: [mdxSourceId], references: [id])
    mdxSourceId String
    data        Json
    ctime       DateTime   @default(now())
    reviewed_at DateTime?
}

model MdxContent {
    id        String         @id @unique
    responses FormResponse[]
    body      String
    /// "Created at"
    ctime     DateTime       @default(now())
    /// "Updated at"
    utime     DateTime       @default(now())
}
